{
  "manifest_version": 2,

  "name": "Youtube Channel Switcher",
  "description": "This extension allows the user to switch between his channels",
  "version": "1.0",

  "browser_action": {
    "default_icon": "youtube-icon-favicon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["popup.js", "settings.js"]
    }
  ],
}